@model IEnumerable<MyBlog.Models.Article>

@{
    ViewBag.Title = "Liste des Articles";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">📌 Liste des Articles</h2>

    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 d-flex mb-4">
                <div class="card article-card shadow-sm ">

                    @if (!string.IsNullOrEmpty(article.ImagePath))
                    {
                        <img src="@article.ImagePath" class="card-img-top img-fixed" alt="Image de l'article">
                    }

                    <div class="card-body d-flex flex-column mb-4">
                        <h5 class="card-title text-dark text-truncate" title="@article.Titre">
                            @article.Titre
                        </h5>

                        <p class="text-muted">
                            <i class="fas fa-clock"></i> Publié le @article.DatePublication.ToShortDateString()
                        </p>

                        <p class="card-text content-truncate">
                            @article.Contenu
                        </p>

                        <div class="mt-auto">
                            <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id" class="btn btn-primary">
                                📖 Lire la suite
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
