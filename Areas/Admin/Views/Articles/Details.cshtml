@model MyBlog.Models.Article

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4 text-primary">Détails de l'Article</h2>

        <div class="article-details">
            <h4 class="text-dark">@Model.Titre</h4>
            <p class="text-muted"><strong>Publié le :</strong> @Model.DatePublication.ToString("dd/MM/yyyy HH:mm")</p>
            <hr />
            <p class="article-content">@Model.Contenu</p>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>